@model FinalBlog.ViewModels.User.RegistrationViewModel
@{
    ViewData["Title"] = "Регистрация"; 
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.js"></script>

<div class="max-width-550 m-auto mb-5">
    <form method="post" asp-controller="User" asp-action="Registration">
        <h3>Регистрация пользователя</h3>
        <hr class="hr"/>
        <div asp-validation-summary="ModelOnly" class="text-danger fs-6"></div>

        <div class="form-group mb-4 position-relative">
            <div class="row">
            <label asp-for="FirstName" class="form-label col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="FirstName" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="FirstName" class="text-danger error-message"></span>
        </div>

        <div class="form-group mb-4 position-relative">
            <div class="row">
                <label asp-for="LastName" class="form-label col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="LastName" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="LastName" class="text-danger error-message"></span>
        </div>

        <div class="form-group mb-4 position-relative">
            <div class="row">
                <label asp-for="Email" class="form-label col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Email" class="text-danger error-message"></span>
        </div>
        <div class="form-group mb-4 position-relative">
            <div class="row">
                <label asp-for="RegPassword" class="form-label col-sm-6 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="RegPassword" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="RegPassword" class="text-danger error-message"></span>
        </div>

        <div class="form-group mb-4 position-relative">
            <div class="row">
                <label asp-for="RegPasswordConfirm" class="form-label col-sm-6 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="RegPasswordConfirm" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="RegPasswordConfirm" class="text-danger error-message"></span>
        </div>

        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
        <p class="form-text"> Уже есть аккаунт?
            <a asp-action="Login" asp-controller="User" class="text-decoration-none">Войти!</a>
        </p>
    </form>
</div>

