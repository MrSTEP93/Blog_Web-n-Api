@model FinalBlog.ViewModels.User.UserViewModel;

<div class="card m-3 col-8 col-md-5 col-lg-3">
    <div class="card-body">
        <a class="fs-5 mb-0 link-primary text-decoration-none"
           asp-action="Info" asp-controller="User" asp-route-id="@Model.Id">
            @Model.FullName
        </a>
        <p class="text-black-50 mb-4">Зарегистрирован: @Model.RegDate</p>
        @foreach (var role in Model.Roles)
        {
            <span class="badge bg-primary">@role</span>
        }
    </div>
    <p class="form-text text-end">@Model.Email</p>
</div>