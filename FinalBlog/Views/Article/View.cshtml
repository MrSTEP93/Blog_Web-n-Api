@model FinalBlog.ViewModels.Article.ArticleViewModel
@{
    ViewData["Title"] = "Статья";

    var isSuperUser = User.IsInRole("Admin") || User.IsInRole("Moderator");
    var currentUserId = User.Claims.FirstOrDefault(c => c.Type == "UserID")?.Value;
}

<script>
    window.addEventListener('load', () => getScrollPos());
</script>

<div class="col-sm-11 m-auto mt-5">
    <div class="row">
        <div class="col">
            <h3>@Model.Title</h3>
        </div>
        <div class="col d-flex align-items-center justify-content-end">
            @if (isSuperUser || (!isSuperUser && currentUserId == Model.AuthorId))
            {
                <a class="btn btn-outline-primary btn-sm m-0" asp-action="Edit" asp-controller="Article" asp-route-id="@Model.Id"
                    asp-route-returnUrl="@Context.Request.Path">
                    Редактировать
                </a>
            }
        </div>
    </div>
    <div class="form-text">
        @foreach (var tag in Model.Tags)
        {
            <span class="badge tag-badge" onclick="document.getElementById('@(tag.Id)').submit()">
                @tag.Name
            </span>
            <form class="d-none" id="@tag.Id" method="get" asp-action="Index" asp-controller="Article" asp-route-tagId="@tag.Id"></form>
        }
    </div>

    <hr class="hr" />

    <p class="text-pre-wrap">@Model.Content</p>

    <hr class="hr" />
    <span>Дата публикации: </span><label asp-for="CreationTime">@Model.CreationTime</label>
    <p class="form-text text-end mb-1">@Model.Author.FirstName @Model.Author.LastName</p>

    @foreach(var comment in Model.Comments)
    {
        <div class="card p-2 m-2">
            <div class="card-body">
                @comment.Text
            </div>
            <div class="row">
                <div class="col">
                    @if (isSuperUser || (!isSuperUser && currentUserId == comment.AuthorId))
                    {
                        <div class="col-sm-8">
                            <form method="post" asp-action="Delete" asp-controller="Comment" asp-route-id="@comment.Id">
                                <input type="hidden" name="userId" value="@currentUserId" />
                                <input type="hidden" value="@Context.Request.Path" name="returnUrl" />

                                <div class="btn-group">
                                    <a class="btn btn-outline-success btn-sm" onclick="setScrollPos()" asp-action="Edit" asp-controller="Comment" asp-route-id="@comment.Id"
                                        asp-route-returnUrl="@Context.Request.Path">
                                        Редактировать
                                    </a>
                                    <button type="submit" class="btn btn-outline-danger btn-sm" onclick="setScrollPos()">Удалить</button>
                                </div>
                            </form>
                        </div>
                    }
                </div>
                <div class=" col form-text text-end">
                    <span class="badge email-badge me-2" onclick="document.getElementById('@(comment.Id)').submit()">
                        @comment.Author.FirstName @comment.Author.LastName
                    </span>
                    <form class="d-none" method="get" id="@comment.Id" asp-action="View" asp-controller="User" asp-route-id="@comment.AuthorId"></form>
                </div>
            </div>
        </div>   
    }
    <hr class="hr mt-1 mb-5"/>
</div>
