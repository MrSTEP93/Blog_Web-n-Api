@model FinalBlog.ViewModels.Comment.CommentAddViewModel
@{
    ViewData["Title"] = "Добавление комментария";
    var currentUserId = User.Claims.FirstOrDefault(c => c.Type == "UserID")?.Value;
}

<partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
<div class="card p-2 m-2">
<h3>Напишите свой комментарий:</h3>
    <form method="post" asp-action="Add" asp-controller="Comment">
        <div asp-validation-summary="ModelOnly" class="text-danger fs-6"></div>

        <input type="hidden" asp-for="ArticleId"/>
        <input type="hidden" asp-for="AuthorId" value="@currentUserId"/>
        <div class="form-group">
            <div class="row mb-3">
                <div class="col-sm-10">
                    <textarea asp-for="Text" class="form-control" rows="5"></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mb-2" onclick="setScrollPos()">Оставить комментарий</button>
        </div>
    </form>
</div>
